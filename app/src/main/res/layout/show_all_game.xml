<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shep_activity"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/show_item_score"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shep"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#fffe00"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_view_full"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:background="@drawable/shep3"
        android:paddingEnd="10dp"
        android:paddingStart="15dp"
        android:text="@string/full"
        android:textSize="18sp"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toEndOf="@id/show_item_score"
        app:layout_constraintTop_toTopOf="@+id/show_item_score"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:text="@string/time"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shep3"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/show_item_score"
        app:layout_constraintTop_toBottomOf="@+id/text_view_full"
        tools:ignore="MissingConstraints"
        />



</androidx.constraintlayout.widget.ConstraintLayout>