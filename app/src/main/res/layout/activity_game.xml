<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shep_activity"
    style="Sitting"
    android:orientation="vertical"
    tools:context=".ui.Game_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD45A3"
        android:minHeight="?attr/actionBarSize"
        android:subtitleTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/score"
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        android:background="@drawable/btn"
                        android:fontFamily="@font/font"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:text="@string/Score"
                        android:textColor="#fffe00"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:gravity="start|center"
                        android:paddingEnd="10dp"
                        android:paddingStart="15dp"
                        android:text="@string/welcome"
                        android:textColor="#fffe00"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/font"
                        android:gravity="start|center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/name"
                        android:textColor="#fffe00"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/font"
                        android:gravity="start|center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="@string/age"
                        android:textColor="#fffe00"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#fffe00" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/number1"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep3"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number2"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep_game2"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number3"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep3"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/number4"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep_game2"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number5"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep3"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number6"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep_game2"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/number7"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep3"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number8"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep_game2"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/number9"
                        android:layout_width="20dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep3"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#fffe00"
                        android:textSize="40sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="#fffe00" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <EditText
                        android:id="@+id/enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shep4"
                        android:fontFamily="@font/font"
                        android:gravity="start|center"
                        android:hint="@string/enter"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/blacky"
                        android:textColorHint="@color/blacky"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_check"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="@string/check"
                        android:textColor="#fffe00"

                        android:textSize="21sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/new_game"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginEnd="90dp"
                        android:background="@drawable/btn"
                        android:fontFamily="@font/font"
                        android:text="@string/new_game"
                        android:textColor="#fffe00"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>

