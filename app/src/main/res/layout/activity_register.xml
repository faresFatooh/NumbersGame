<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shep_activity"
    android:gravity="center"
    tools:context=".ui.register_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/Layout_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/full"
                    android:inputType="text"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/yellow"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundMode="outline"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="1dp"
                    app:boxCornerRadiusTopEnd="1dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                    app:boxStrokeWidth="3dp"
                    app:errorTextColor="#304FFE"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/yellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/btn"
                        android:drawableStart="@drawable/ic_user"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/font"
                        android:textAlignment="textStart"
                        android:textColor="@color/yellow"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_img"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:civ_border_color="@color/yellow"
                    app:civ_border_width="3dp" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxCollapsedPaddingTop="10dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="1dp"
                app:boxCornerRadiusTopEnd="1dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/yellow"
                app:boxStrokeWidth="3dp"
                app:errorTextColor="#304FFE"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/font"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/yellow"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:hint="@string/user_name"
                android:inputType="text"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxCollapsedPaddingTop="10dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="1dp"
                app:boxCornerRadiusTopEnd="1dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeWidth="3dp"
                app:errorTextColor="#304FFE"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/font"
                    android:textColor="@color/yellow"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/yellow"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#5243A0"
                    app:boxBackgroundMode="outline"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="1dp"
                    app:boxCornerRadiusTopEnd="1dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeWidth="3dp"
                    app:errorTextColor="#304FFE"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/yellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/btn"
                        android:drawableStart="@drawable/password"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/yellow"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_re"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:hint="@string/r_password"
                    android:inputType="textPassword"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/yellow"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#5243A0"
                    app:boxBackgroundMode="outline"
                    app:boxCollapsedPaddingTop="1dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="1dp"
                    app:boxStrokeWidth="3dp"
                    app:errorTextColor="#304FFE"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/yellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/btn"
                        android:drawableStart="@drawable/password"
                        android:fontFamily="@font/font"
                        android:textColor="@color/yellow"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/date_baker_register"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/font"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/Birthdate"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_country"
                android:theme="@style/Theme.AppCompat.NoActionBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn"
                android:entries="@array/contre"
                android:padding="10dp"
                android:textColor="@color/yellow"

                />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:buttonTint="#FFFFFF"
                    android:fontFamily="@font/font"
                    android:text="@string/male"
                    android:textColor="@color/yellow"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:buttonTint="#FFFFFF"
                    android:fontFamily="@font/font"
                    android:text="@string/Female"
                    android:textColor="@color/yellow"
                    android:textColorHint="#FFFFFF"
                    android:textSize="20sp" />

            </RadioGroup>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/font"
                android:text="@string/save"
                android:textColor="@color/yellow"
                android:textSize="20sp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>